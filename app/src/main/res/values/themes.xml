<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RedAppMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color_red</item>
        <item name="colorPrimaryVariant">@color/main_color_red</item>
        <item name="colorOnPrimary">@color/main_color_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color_red</item>
        <item name="colorSecondaryVariant">@color/main_color_red</item>
        <item name="colorOnSecondary">@color/main_color_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="buttonStyleSelected" parent="android:Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_color_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_selected</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="buttonStyleNotSelected" parent="android:Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_notselected</item>
        <item name="backgroundTint">@null</item>
    </style>
</resources>