<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RedAppMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color_red</item>
        <item name="colorPrimaryVariant">@color/main_color_red</item>
        <item name="colorOnPrimary">@color/main_color_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color_red</item>
        <item name="colorSecondaryVariant">@color/main_color_red</item>
        <item name="colorOnSecondary">@color/main_color_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mainToast">
        <item name="stColorBackground">@color/main_color_red</item>
        <item name="stTextColor">@color/white</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@mipmap/ic_round_mobile_logo_round</item>
        <item name="stRadius">20dp</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/white</item>
        <item name="stLength">LONG</item>
    </style>
</resources>